<body>
    <div class="game-container">
        <h1>Missione Eco-Agente üåç</h1>
        <p>Trascina il rifiuto nel bidone corretto prima che scada il tempo!</p>
        <p id="timer">‚è≥ Tempo: <span id="time">30</span> secondi</p>
        <div id="waste-item" class="item" draggable="true" ondragstart="drag(event)">üß¥ Bottiglia di plastica</div>
        <div>
            <div class="bin" id="plastica" ondrop="drop(event, 'plastica')" ondragover="allowDrop(event)">üü° Plastica</div>
            <div class="bin" id="carta" ondrop="drop(event, 'carta')" ondragover="allowDrop(event)">üìÑ Carta</div>
            <div class="bin" id="vetro" ondrop="drop(event, 'vetro')" ondragover="allowDrop(event)">üü¢ Vetro</div>
            <div class="bin" id="umido" ondrop="drop(event, 'umido')" ondragover="allowDrop(event)">üçé Organico</div>
        </div>
        <p id="feedback"></p>
        <button onclick="nextItem()">Prossimo Rifiuto</button>
    </div>

    <script>
        let timeLeft = 30;
        let currentIndex = 0;
        const wasteItems = [
            { name: "üß¥ Bottiglia di plastica", bin: "plastica" },
            { name: "üìÑ Giornale", bin: "carta" },
            { name: "ü•§ Bicchiere di vetro", bin: "vetro" },
            { name: "üçé Bucce di mela", bin: "umido" },
            { name: "üçï Cartone della pizza", bin: "umido" },
            { name: "üíª Vecchio computer", bin: "raee" }
        ];

        function allowDrop(event) {
            event.preventDefault();
        }

        function drag(event) {
            event.dataTransfer.setData("text", event.target.id);
        }

        function drop(event, bin) {
            event.preventDefault();
            let correctBin = wasteItems[currentIndex].bin;
            let feedback = document.getElementById("feedback");
            if (bin === correctBin) {
                feedback.innerText = "‚úÖ Corretto!";
                feedback.className = "correct";
            } else {
                feedback.innerText = "‚ùå Sbagliato! Riprova!";
                feedback.className = "wrong";
            }
        }

        function nextItem() {
            currentIndex = (currentIndex + 1) % wasteItems.length;
            document.getElementById("waste-item").innerText = wasteItems[currentIndex].name;
            document.getElementById("feedback").innerText = "";
            document.getElementById("feedback").className = "";
        }

        function countdown() {
            if (timeLeft > 0) {
                timeLeft--;
                document.getElementById("time").innerText = timeLeft;
                setTimeout(countdown, 1000);
            } else {
                alert("‚è≥ Tempo scaduto! Prova di nuovo!");
                location.reload();
            }
        }

        countdown();
    </script>
</body>
